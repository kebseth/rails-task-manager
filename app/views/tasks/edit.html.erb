<h1>Edit task</h1>
<div>
  <%= form_for @task do |f| -%>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_area :details %>
  </div>
  <div>
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  </div>
    <%= f.submit %>
  <% end -%>
</div>
